<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/token_item"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_height="60dp"
    android:background="@color/white">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/token_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp" />


    <com.tai_chain.view.MText
        android:id="@+id/token_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/token_icon"
        android:layout_alignTop="@id/token_icon"
        android:text="TIT"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:customTFont="CircularPro-Bold.otf" />

    <com.tai_chain.view.MText
        android:id="@+id/token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallets_name"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/token_icon"
        android:layout_alignBottom="@id/token_icon"
        android:text="EtherZero"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:customTFont="CircularPro-Book.otf" />


    <Switch
        android:id="@+id/token_manager_switch"
        android:layout_width="43dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        />

</RelativeLayout>
