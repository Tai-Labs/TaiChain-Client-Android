<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"
    android:orientation="vertical">

    <include layout="@layout/title_project" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/create_wallet_text1"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/create_wallet_text2"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <com.tai_chain.view.MText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="@string/create_wallet_tname"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <EditText
            android:id="@+id/et_wallet_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/create_wallet_name"
            android:lines="1"
            android:paddingStart="5dp"
            android:textColor="@color/zt_et_text"
            android:textColorHint="@color/zt_et_hint"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <com.tai_chain.view.MText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="@string/create_wallet_pwd"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <EditText
            android:id="@+id/et_wallet_pwd"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/create_wallet_inputpwd"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="12"
            android:paddingStart="5dp"
            android:textColor="@color/zt_et_text"
            android:textColorHint="@color/zt_et_hint"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <com.tai_chain.view.MText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="@string/create_wallet_apwd"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_14sp"
            app:customTFont="CircularPro-Bold.otf" />

        <EditText
            android:id="@+id/et_wallet_pwd_again"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/create_wallet_affirmpwd"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="12"
            android:paddingStart="5dp"
            android:textColor="@color/zt_et_text"
            android:textColorHint="@color/zt_et_hint"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />


    <LinearLayout
        android:id="@+id/lly_wallet_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/agreement_circle_cb_selector"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/create_wallet_fwystk1"
            android:textColor="@color/zt_lu"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType=""
            android:text="@string/create_wallet_fwystk2"
            android:textColor="@color/zt_lu"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/create_wallet_btn_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/create_recovery_create"
        android:textColor="@color/zt_black"
        android:textSize="@dimen/zt_14sp" />

    <TextView
        android:id="@+id/btn_input_wallet"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/load_wallet_btn"
        android:textColor="@color/logo_gradient_start"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>