<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="225dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#2C2C2C"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:divider="@null"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center_vertical|bottom"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/impor_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@mipmap/import_wallet_icon"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:text="@string/load_wallet_btn"
            android:textColor="@color/zt_main"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/create_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@mipmap/create_wallet_icon"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:text="@string/create_wallet_btn"
            android:textColor="@color/zt_main"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>