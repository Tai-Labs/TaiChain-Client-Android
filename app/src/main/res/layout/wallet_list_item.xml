<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallet_card"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginEnd="17.5dp"
    android:layout_marginStart="17.5dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/home_wallet_bg"
    android:paddingEnd="31dp"
    android:paddingStart="22dp">

    <ImageView
        android:id="@+id/wallet_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@+id/wallet_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/zt_main"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wallet_balance_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zt_main"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/wallet_balance_fiat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zt_main"
            android:textSize="12sp" />

    </LinearLayout>




</RelativeLayout>
