<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wallet_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp">


    <ImageView
        android:id="@+id/wallwts_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp" />


    <com.tai_chain.view.MText
        android:id="@+id/wallets_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="59dp"
        android:text="TIT"
        android:textColor="@color/zt_black"
        android:textSize="16sp"
        app:customTFont="CircularPro-Bold.otf" />


    <ImageButton
        android:id="@+id/wallet_manager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_more_horiz_black_24dp"
        android:visibility="gone"/>


</RelativeLayout>
